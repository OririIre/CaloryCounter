<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/whiteBackground</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme</item>
        <item name="android:textViewStyle">@style/ConsumedText_Light</item>
        <item name="materialButtonStyle">@style/HistoryButton_Light</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="cornerSize">50%</item>
    </style>

    <style name="HistoryButton_Light" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/black</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="strokeColor">@color/black</item>
    </style>

    <style name="ConsumedText_Light">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>

    <style name="ProgressBarBackground_Light">
        <item name="android:progressBarStyle">?android:attr/progressBarStyleHorizontal</item>
    </style>

</resources>