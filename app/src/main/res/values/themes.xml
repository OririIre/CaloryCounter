<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/LightTheme_Background</item>
        <item name="colorAccent">@color/LightTheme_Primary_Color</item>
        <item name="primary_color">@color/LightTheme_Primary_Color</item>
        <item name="secondary_color">@color/LightTheme_Secondary_Color</item>
        <item name="header">@color/LightTheme_Header</item>
        <item name="icon_color">@color/LightTheme_Icon_Color</item>
        <item name="text_color">@color/LightTheme_Icon_Color</item>
        <item name="element_background">@color/LightTheme_Elements_Background</item>
        <item name="tab_background">@color/LightTheme_Tab_Background</item>
        <item name="custom_edit_text">@drawable/custom_edit_text_light</item>
        <item name="selection_box">@drawable/custom_textview_border_light</item>
        <item name="drop_shadow">@drawable/drop_shadow_light</item>
        <item name="progress_circular">@drawable/circle_shape_light</item>
        <item name="progressbar">@drawable/progressbar_light</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme</item>
        <item name="android:textViewStyle">@style/TextView_Light</item>
        <item name="materialButtonStyle">@style/HistoryButton_Light</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="cornerSize">50%</item>
        <item name="android:backgroundTint">@color/LightTheme_Primary_Color</item>
    </style>

    <style name="HistoryButton_Light" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/LightTheme_Text_Color</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="strokeColor">@color/transparentBlack</item>
    </style>

    <style name="TextView_Light">
        <item name="android:textColor">@color/LightTheme_Text_Color</item>
        <item name="android:textColorHint">@color/LightTheme_Text_Color</item>
    </style>

</resources>