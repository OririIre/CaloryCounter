<resources>
    <!-- Base application theme. -->
    <style name="LightTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/whiteBackground</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme</item>
        <item name="android:textViewStyle">@style/TextView_Light</item>
        <item name="materialButtonStyle">@style/HistoryButton_Light</item>
        <item name="progress_circular">@drawable/circle_shape_light</item>
        <item name="progressbar">@drawable/progressbar_light</item>
        <item name="header">@color/white_low_transparency</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
        <item name="custom_edit_text">@drawable/custom_edit_text_light</item>
        <item name="selection_box">@drawable/custom_textview_border_light</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <style name="FloatingActionButtonStyle" parent="Widget.Design.FloatingActionButton">
        <item name="cornerSize">50%</item>
    </style>

    <style name="HistoryButton_Light" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/transparentBlack</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="strokeColor">@color/transparentBlack</item>
    </style>

    <style name="TextView_Light">
        <item name="android:textColor">@color/transparentBlack</item>
        <item name="android:textColorHint">@color/transparentBlack</item>
    </style>

    <style name="SpinnerStyle">
        <item name="android:textColor">@color/transparentBlack</item>
    </style>
</resources>