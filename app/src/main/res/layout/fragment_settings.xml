<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/layoutCalories"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/iconAndTextGoal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="@string/setGoal"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/baseline_how_to_reg_24" />


        <LinearLayout
            android:id="@+id/goalVisibility"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="@string/caloriesGoal" />

            <EditText
                android:id="@+id/enterCaloriesGoal"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:hint="@string/caloriesGoalHint"
                android:inputType="text"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:drawableStart="@drawable/baseline_text_snippet_24"
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="12dp"
                android:imeOptions="actionSend"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="@string/proteinGoal" />

            <EditText
                android:id="@+id/enterProteinGoal"
                android:layout_width="180dp"
                android:layout_height="50dp"
                android:hint="@string/proteinGoalHint"
                android:inputType="text"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:autofillHints=""
                android:drawableStart="@drawable/baseline_text_snippet_24"
                android:background="@drawable/custom_edit_text"
                android:drawablePadding="12dp"
                android:imeOptions="actionSend"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/saveGoals"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_states_1"
                android:backgroundTint="@color/primaryColor"
                android:text="@string/saveGoals" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutClearData"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/iconAndTextReset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="@string/resetData"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/baseline_clear_all_24" />


        <LinearLayout
            android:id="@+id/clearVisibility"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearAll"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_states_1"
                android:backgroundTint="@color/primaryColor"
                android:text="@string/clearAll" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearGoals"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_states_1"
                android:backgroundTint="@color/primaryColor"
                android:text="@string/clearGoals" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearCalories"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_states_1"
                android:backgroundTint="@color/primaryColor"
                android:text="@string/clearCalories" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearProtein"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/button_states_1"
                android:backgroundTint="@color/primaryColor"
                android:text="@string/clearProtein" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/clearMeals"
                android:layout_width="160dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/button_states_1"
                android:backgroundTint="@color/primaryColor"
                android:text="@string/clearMeals" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLanguage"
        android:orientation="vertical"
        android:layout_marginStart="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true">

        <TextView
            android:id="@+id/iconAndTextLanguage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20sp"
            android:text="@string/language"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/baseline_language_24" />

        <LinearLayout
            android:id="@+id/languageVisibility"
            android:orientation="vertical"
            android:layout_marginStart="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="@string/voiceLanguage" />

            <Spinner
                android:id="@+id/languageDropdown"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:textColor="@color/white"
                android:spinnerMode="dropdown" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:text="@string/appLanguage" />

            <Spinner
                android:id="@+id/appLanguageDropdown"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:layout_marginStart="50dp"
                android:spinnerMode="dropdown" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/saveLanguage"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginStart="50dp"
                android:background="@drawable/button_states_1"
                android:backgroundTint="@color/primaryColor"
                android:text="@string/saveLang" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>