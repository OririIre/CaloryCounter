    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:background="@color/darkestgrey"
        android:backgroundTint="@color/almostdarkestgrey"
        app:cardCornerRadius="20dp"
        app:cardElevation="0dp"
        app:cardPreventCornerOverlap="true"
        app:layout_constraintBottom_toTopOf="@+id/layoutMealButtons"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="10dp"
            android:background="@color/transparent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/progressBar"
                android:layout_alignParentStart="true"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="15dp"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-black"
                android:gravity="start"
                android:text="@string/Remaining"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/leftKcal"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/progressBar"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="15dp"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-black"
                android:gravity="end"
                android:text="@string/usedKcal"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_above="@+id/Remaining2"
                android:background="@color/transparent"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:progressDrawable="@drawable/progress_bar2"
                android:rotation="180" />

            <TextView
                android:id="@+id/Remaining2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ProteinProgressBar"
                android:layout_alignParentStart="true"
                android:layout_marginStart="80dp"
                android:layout_marginEnd="90dp"
                android:layout_marginBottom="15dp"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-black"
                android:gravity="start"
                android:text="@string/Remaining"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/leftProt"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/ProteinProgressBar"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="80dp"
                android:layout_marginBottom="15dp"
                android:background="@color/transparent"
                android:fontFamily="sans-serif-black"
                android:gravity="end"
                android:text="@string/usedProt"
                android:textColor="@color/white"
                android:textSize="15sp" />

            <ProgressBar
                android:id="@+id/ProteinProgressBar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:layout_alignParentBottom="true"
                android:background="@color/transparent"
                android:paddingStart="25dp"
                android:paddingEnd="25dp"
                android:progressDrawable="@drawable/progress_bar2"
                android:rotation="180" />
        </RelativeLayout>
