<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- background color -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/transparent" />
            <corners android:radius="4dp" />
        </shape>
    </item>
    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="#80E5E5EB"
                android:centerX="0.9"
                android:endColor="@color/transparent"
                android:startColor="#B3E5E5EB" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="#80E5E5EB"
                android:centerX="0.9"
                android:endColor="@color/transparent"
                android:startColor="#B3E5E5EB" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="#80E5E5EB"
                android:centerY="0.2"
                android:endColor="@color/transparent"
                android:startColor="#B3E5E5EB" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#80E5E5EB"
                android:centerY="0.2"
                android:endColor="@color/transparent"
                android:startColor="#B3E5E5EB" />
            <corners android:radius="20dp" />
        </shape>
    </item>
</layer-list>