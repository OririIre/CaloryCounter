<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--  right shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="180"
                android:centerColor="@color/transparent"
                android:centerX="0.9"
                android:endColor="@color/transparent"
                android:startColor="@color/LightTheme_Elements_Background" />
<!--            <corners android:radius="20dp" />-->
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="8dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="40dp"
                />
        </shape>
    </item>
    <!--  left shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="360"
                android:centerColor="@color/transparent"
                android:centerX="0.9"
                android:endColor="@color/transparent"
                android:startColor="@color/LightTheme_Elements_Background" />
<!--            <corners android:radius="20dp" />-->
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="8dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="40dp"
                />
        </shape>
    </item>
    <!--  top shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:centerColor="@color/transparent"
                android:centerY="0.2"
                android:endColor="@color/transparent"
                android:startColor="@color/LightTheme_Elements_Background" />
<!--            <corners android:radius="20dp" />-->
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="8dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="40dp"
                />
        </shape>
    </item>
    <!--  bottom shadow -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="@color/transparent"
                android:centerY="0.2"
                android:endColor="@color/transparent"
                android:startColor="@color/LightTheme_Elements_Background" />
<!--            <corners android:radius="20dp" />-->
            <corners
                android:topLeftRadius="0dp"
                android:topRightRadius="8dp"
                android:bottomLeftRadius="0dp"
                android:bottomRightRadius="40dp"
                />
        </shape>
    </item>
</layer-list>