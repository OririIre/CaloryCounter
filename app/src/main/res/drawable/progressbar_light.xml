<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="4dp" />
            <gradient
                android:angle="90"
                android:startColor="@color/LightTheme_Background"
                android:centerColor="@color/LightTheme_Elements_Background"
                android:endColor="@color/LightTheme_Background"
                android:type="linear"
                android:useLevel="false" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <corners android:radius="4dp" />
                <gradient
                    android:angle="90"
                    android:startColor="@color/secondaryColor2"
                    android:centerColor="@color/primaryColor"
                    android:endColor="@color/secondaryColor2"
                    android:type="linear"
                    android:useLevel="false" />
            </shape>
        </scale>
    </item>
</layer-list>