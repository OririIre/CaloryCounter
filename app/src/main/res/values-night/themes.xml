<resources>
    <!-- Base application theme. -->
    <style name="DarkTheme" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:background">@color/darkestgrey</item>
        <item name="colorAccent">@color/primaryColor</item>
        <item name="floatingActionButtonStyle">@style/FloatingActionButtonStyle.Dark</item>
        <item name="bottomSheetStyle">@style/BottomSheetDialogTheme.Dark</item>
        <item name="android:textViewStyle">@style/TextView_Dark</item>
        <item name="materialButtonStyle">@style/HistoryButton_Dark</item>
        <item name="progress_circular">@drawable/circle_shape_dark</item>
        <item name="progressbar">@drawable/progressbar_dark</item>
        <item name="header">@color/almostDarkestGrey</item>
        <item name="custom_edit_text">@drawable/custom_edit_text</item>
        <item name="selection_box">@drawable/custom_textview_border</item>
        <item name="drop_shadow">@drawable/drop_shadow</item>
        <item name="icon_color">@color/cloudyWhite</item>
        <item name="text_color">@color/cloudyWhite</item>
        <item name="element_background">@color/almostDarkestGrey</item>
    </style>

    <style name="BottomSheetDialogTheme.Dark" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:background">@color/transparent</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="behavior_peekHeight">300dp</item>
    </style>

    <style name="FloatingActionButtonStyle.Dark" parent="Widget.Design.FloatingActionButton">
        <item name="cornerSize">50%</item>
    </style>

    <style name="HistoryButton_Dark" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/cloudyWhite</item>
        <item name="cornerRadius">15dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="strokeColor">@color/someDarkestGrey</item>
    </style>

    <style name="TextView_Dark">
        <item name="android:textColor">@color/cloudyWhite</item>
        <item name="android:textColorHint">@color/cloudyWhite</item>
    </style>
</resources>